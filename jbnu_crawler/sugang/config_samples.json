{
    "browser": {
      "type": "chrome",
      "headless": true,
      "options": [
        "--no-sandbox",
        "--disable-dev-shm-usage",
        "--window-size=1920,1080",
        "--lang=ko_KR"
      ]
    },
    "targets": [
      {
        "name": "네이버 검색",
        "url": "https://www.naver.com",
        "wait_for": {
          "type": "id",
          "value": "query",
          "timeout": 10
        },
        "actions": [
          {
            "type": "screenshot",
            "filename": "naver_home.png"
          },
          {
            "type": "input",
            "selector": {
              "type": "id",
              "value": "query"
            },
            "text": "셀레니움 자동화",
            "submit": true
          },
          {
            "type": "wait",
            "seconds": 3
          },
          {
            "type": "screenshot",
            "filename": "naver_search_results.png"
          },
          {
            "type": "extract",
            "selector": {
              "type": "css",
              "value": ".title_link"
            },
            "save": true,
            "output_file": "naver_search_results.txt"
          }
        ]
      },
      {
        "name": "구글 검색",
        "url": "https://www.google.com",
        "wait_for": {
          "type": "name",
          "value": "q",
          "timeout": 10
        },
        "actions": [
          {
            "type": "input",
            "selector": {
              "type": "name",
              "value": "q"
            },
            "text": "Python Selenium 자동화",
            "submit": true
          },
          {
            "type": "wait",
            "seconds": 3
          },
          {
            "type": "screenshot",
            "filename": "google_search_results.png"
          },
          {
            "type": "extract",
            "selector": {
              "type": "css",
              "value": "h3"
            },
            "save": true,
            "output_file": "google_search_results.txt"
          }
        ]
      }
    ],
    "output": {
      "log_level": "INFO",
      "results_dir": "results",
      "screenshots_dir": "screenshots",
      "logs_dir": "logs"
    },
    "timeouts": {
      "default_wait": 10,
      "page_load": 30
    }
  }
  